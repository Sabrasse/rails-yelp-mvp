<div class="container">
<h1><%=@restaurant.name%></h1>
<ul>
<li><%=@restaurant.address%></li>
<li><%=@restaurant.phone_number%></li>
<li><%=@restaurant.category%></li>

</ul>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>

<%=link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
<%=link_to "Back to my restaurants", restaurants_path, class:"btn btn-secondary"%>
</div>
